.intro
	background-image: url("../images/intro-bg.jpg")
	color: white
	padding 105px 0 120px
	position: relative
	&:before
		content: ""
		background-color: $intro-bg-overlay
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%

	&__container
		display flex
		flex-direction: column
		align-items: center
		text-align: center

	&__heading
		margin-bottom: 25px

	&__title
		margin-bottom: 56px
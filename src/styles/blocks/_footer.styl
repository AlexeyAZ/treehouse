.footer
	color: white

	&__container
		display: flex;
		align-items: flex-start
		justify-content: space-between

	&__top
		background-color: $footer-top-bg
		padding: 50px 0 90px

	&__list
		
		&_contacts
			width: 30%
			.footer__list-item
				&:nth-child(2)
					.footer__list-link
						background-image: url("../images/icon-location.png")
						background-position: left 4px
				&:nth-child(3)
					.footer__list-link
						background-image: url("../images/icon-iphone.png")
						background-position: 2px center
				&:nth-child(4)
					.footer__list-link
						background-image: url("../images/icon-email.png")
		&_posts
			padding-left: 30px
			width: 40%
			.footer__list-item
				&:nth-child(2)
					.footer__list-link
						background-image: url("../images/icon-news.png")
				&:nth-child(3)
					.footer__list-link
						background-image: url("../images/icon-photo.png")
				&:nth-child(4)
					.footer__list-link
						background-image: url("../images/icon-news.png")
				&:nth-child(5)
					.footer__list-link
						background-image: url("../images/icon-news.png")
				&:nth-child(6)
					.footer__list-link
						background-image: url("../images/icon-play.png")
						background-position: 2px center
		&_tweets
			width: 30%
			.footer__list-item
				.footer__list-link
					background-image: url("../images/icon-tw-custom.png")
					background-position: left top 6px

	&__list-item
		font-family: "RSReg"
		font-size: 16px
		line-height: 1.8
		margin-bottom: 4px
		&_head
			font-family: "MontserratBold"
			font-size: 18px
			text-transform: uppercase
			margin-bottom: 16px

	&__list-link
		linkColor(white, $main-green)
		background-position: left center
		background-repeat: no-repeat
		display: flex
		align-items: center
		transition: color 0.3s linear
		padding-left: 40px
		min-height: 40px

	&__list-tags
		display: inline-block
		padding-left: 40px
		width: 100%

	&__list-link-tag
		linkColor(white, white)
		font-family: "RSBold"
		margin-right: 5px

	&__list-time
		color: white
		display: inline-block
		font-size: 10px
		padding-left: 40px
		width: 100%

	&__bottom
		padding: 30px 0

	&__copyright
		transform: translateY(-50%)
		font-family: "MontserratReg"
		font-size: 14px
		position: absolute
		top: 50%
		left: $container-padding-xl
		color: black

	&__social-item
		display: inline-block
		&:nth-child(1)
			.footer__social-link
				background-image: url("../images/icon-twitter.png")
				&:hover
					background-color: $twitter-bg
		&:nth-child(2)
			.footer__social-link
				background-image: url("../images/icon-fb.png")
				background-position: 47% center
				&:hover
					background-color: $fb-bg
		&:nth-child(3)
			.footer__social-link
				background-image: url("../images/icon-pint.png")
				&:hover
					background-color: $pint-bg
		&:nth-child(4)
			.footer__social-link
				background-image: url("../images/icon-g.png")
				&:hover
					background-color: $g-bg

	&__social-link
		transition: background-color 0.3s linear
		background-color: black
		background-position: center
		background-repeat: no-repeat
		border-radius: 50%
		display: inline-block
		margin: 0 2px
		height: $footer-social-item-size
		width: $footer-social-item-size

		